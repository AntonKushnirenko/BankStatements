<MainScreen>
    MDScreen:
        # Кнопка выбора файла, по нажатию которой открывается файловый менеджер
        Button:
            id: select_a_file_btn
            text_size: self.width*0.8, None
            halign: 'center'
            markup: True
            background_normal: app.resource_path('select_a_file_normal.png')
            background_down: app.resource_path('select_a_file_down.png')
            pos_hint: {'center_x': 0.5, 'center_y': 0.61}
            font_size: app.font_size_value
            size_hint: 0.66, 0.33
            on_release:
                root.open_file_manager()

        # Кнопка выгрузки файла в Google Таблицу
        Button:
            background_normal: app.resource_path('upload_to_google_normal.png')
            background_down: app.resource_path('upload_to_google_down.png')
            pos_hint: {'center_x': 0.5, 'center_y': 0.32}
            font_size: app.font_size_value
            size_hint: 0.66, 0.18
            on_release:
                root.upload_to_googledrive()

